<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Choose your language"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonGermany"
        android:layout_width="70dp"
        android:layout_height="63dp"

        android:background="@drawable/flag_germany_square"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:layout_marginTop="9dp"
        android:text="German"
        android:textColor="#000000"
        android:textSize="17sp"

        app:layout_constraintEnd_toEndOf="@+id/imageButtonGermany"
        app:layout_constraintStart_toStartOf="@+id/imageButtonGermany"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonGermany" />

    <ImageButton
        android:id="@+id/imageButtonUK"
        android:layout_width="70dp"
        android:layout_height="63dp"

        android:background="@drawable/flag_uk_square"

        app:layout_constraintBottom_toBottomOf="@+id/imageButtonGermany"


        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/imageButtonGermany" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:text="English"
        android:textColor="#000000"
        android:textSize="17sp"
        android:layout_marginTop="9sp"

        app:layout_constraintEnd_toEndOf="@+id/imageButtonUK"
        app:layout_constraintStart_toStartOf="@+id/imageButtonUK"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonUK" />


    <TextView
        android:id="@+id/textView_Sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Sound"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.51"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonSoundOn"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/baseline_volume_on_24"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonGermany"
        app:layout_constraintStart_toStartOf="@+id/imageButtonGermany"
        app:layout_constraintTop_toBottomOf="@+id/textView_Sound" />

    <ImageButton
        android:id="@+id/imageButtonSoundOff"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:background="@drawable/baseline_volume_off_24"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonSoundOn"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonUK"
        app:layout_constraintStart_toStartOf="@+id/imageButtonUK"
        app:layout_constraintTop_toTopOf="@+id/imageButtonSoundOn" />


</androidx.constraintlayout.widget.ConstraintLayout>
